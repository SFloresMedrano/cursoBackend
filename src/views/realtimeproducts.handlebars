<h1>Vista home</h1>

<div>
    <form action="/" method="post" enctype="multipart/form-data">
        <label for="title">
            Title :<input type="text" name="title" id="inputName" >
        </label>
        <label for="description">
            Description :<input type="text" name="description" id="inputDescription">
        </label>
        <label for="code">
            Code :<input type="number" name="code" id="inputCode">
        </label>
        <label for="price">
            Price :<input type="number" name="price" id="inputPrice">
        </label>
        <label for="stock">
            Stock :<input type="number" name="stock" id="inputStock">
        </label>
        <label for="category">
            Category :<input type="text" name="category" id="inputCategory">
        </label>
        <label for="thumbnail">
            thumbnail :<input type="file" name="thumbnail" id="inputThumbnail">
        </label>
        <input type="submit">
</div>

  {{#each products}}
    <ul style='margin-bottom:30px;'>
      <li>Nombre: {{title}}</li>
      <li>Codigo: {{code}}</li>
    </ul>
  {{/each}}
  
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>