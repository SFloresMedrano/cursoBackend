<h1>Products Paginated</h1>
{{#each products}}
    <div>
        <h2>{{this.title}}</h2>
        <p>{{this._id}}</p>
        <p>{{this.description}}</p>
        <p>Price: {{this.price}}</p>
        <p>{{this.code}}</p>
        <p>{{this.stock}}</p>
        <p>{{this.category}}</p>

        <a href="/products/{{this._id}}">View details of {{this._id}}</a>
        <button onclick="putIntoCart('{{this._id}}')">Add to cart {{this._id}}</button>
    </div>
{{/each}}

<div>
totalPages:
{{totalPages}}
prevPage:
{{prevPage}}
nextPage:
{{nextPage}}
currentPage:
{{currentPage}}
hasPrevPage:
{{hasPrevPage}}
hasNextPage:
{{hasNextPage}}
prevLink:
{{prevLink}}
nextLink:
{{nextLink}}
</div>

<div class="pagination">
    {{#if prevLink}}
        <a href="{{prevLink}}">Previous</a>
    {{/if}}

    {{#if nextLink}}
        <a href="{{nextLink}}">Next</a>
    {{/if}}
</div>